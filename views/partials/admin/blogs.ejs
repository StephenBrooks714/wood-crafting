<% if(blogs !== "") { %>
    <ul class="list-group list-group-flush">
        <% for(i=0; i < blogs.length; i++) { %>
            <li class="list-group-item"><%= blogs[i].title %>
                <a href="/post/<%= blogs[i]._id %>">
                    <i class="fab fa-readme"></i>
                </a>
                <a href="/delete/post/<%= blogs[i]._id %>">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </li>
        <% } %>
    </ul>
<% } else { %>
<p class="h5">There are no blogs to show.</p>
<% } %>