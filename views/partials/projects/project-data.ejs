<main class="container" style="margin-top: 120px; margin-bottom: 60px;">
    <nav class="mb-2">
        <a href="/">Home <i class="fas fa-home"></i></a>
        <a class="ml-4" href="/projects">
           See All <i class="far icons fa-arrow-alt-circle-left"></i>
        </a>
    </nav>
    <article class="row text-uppercase">
        <div class="col-lg-12 mb-4">
            <h1 class="font-weight-bold mb-3 display-4 grey-text"><%= project.title %></h1>
            <h2>The Art Of <%= project.summary %></h2>
        </div>
        <section class="col-md-6 mb-3">
            <aside>
                <p class="text-muted">
                    <%= project.detail %>
                </p>
                <ul class="mb-3">
                    <% project.feature.forEach(function(feature){ %>
                        <li>
                            <p><%= feature %></p>
                        </li>
                    <% }) %>
                </ul>
                <a href="mailto:<%= project.userid.email %>" class="btn btn-outline-brown">Email Artist</a>
                <% if(loggedIn) { %>
                    <a href="/delete/project/<%= project._id %>" class="btn btn-outline-deep-orange">Delete</a>
                <% } %>
            </aside>
        </section>
        <section class="col-md-6 mb-3">
            <figure>
                <img src="<%= project.image %>"
                     class="img-fluid"
                     alt="<%= project.title %>"
                />
            </figure>
        </section>
    </article>
</main>