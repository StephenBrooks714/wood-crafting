<div class="row justify-content-center align-items-center text-center flex-center d-flex mx-auto" style="margin-bottom: 70px;">
    <% if(blogs == "") { %>
        <div class="col-md-12 text-center">
            <h2 class="fw-bold">There are no blogs posted yet.</h2>
        </div>
    <% } else { %>
        <% for(i=0; i < blogs.length; i++) { %>
            <div class="col-lg-3 zoom col-md-6 col-sm-12 mb-4">
                <a href="/post/<%= blogs[i]._id %>">
                    <h2><%= blogs[i].title %></h2>
                    <img src="<%= blogs[i].image %>" class="img-fluid" alt="<%= blogs[i].title %>" />
                </a>
            </div>
        <% } %>
    <% } %>
</div>