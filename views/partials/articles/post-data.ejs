<div class="container" style="margin-top: 140px; margin-bottom: 70px;">
    <div class="bc-icons-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb indigo lighten-2">
                <li class="breadcrumb-item"><a class="white-text" href="/">Home</a><i class="fas fa-caret-right mx-2"
                                                                                      aria-hidden="true"></i></li>
                <li class="breadcrumb-item"><a class="white-text" href="/blogs">Articles</a><i class="fas fa-caret-right mx-2"
                                                                                               aria-hidden="true"></i></li>
                <li class="breadcrumb-item text-white"><%= post.title %></li>
            </ol>
        </nav>
    </div>

    <!--Section: Content-->
    <section class="text-justify">
        <h1 class="font-weight-bold mb-3"><%= post.title %></h1>

        <% if(loggedIn) { %>

            <a href="/delete/post/<%= post._id %>" class="btn btn-warning rounded-pill mb-2">delete post</a>
        <% } %>

        <p class="font-weight-bold">
            <%= post.body %>
        </p>

        <figure class="figure">
            <img src="<%= post.image %>" class="figure-img img-fluid z-depth-1"
                 alt="<%= post.title %>">
            <figcaption class="figure-caption">
                <%= post.summary %> - <strong>Posted By</strong> <a href="/profile/<%= post.userid._id %>"><%= post.userid.username %></a>
            </figcaption>
        </figure>

    </section>
    <!--Section: Content-->

</div>