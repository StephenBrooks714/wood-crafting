<% if(about != "") { %>
    <div class="row mb-5 pb-5">
        <div class="col-lg-12">
            <div class="card z-depth-1 p-3">
                <% for(i=0; i < about.length; i++) { %>
                    <div class="row">
                        <div class="col-md-6">
                    <span class="h2">
                        <%= about[i].title %>
                        <img src="<%= about[i].image %>"
                             loading="lazy"
                             height="80"
                             width="80"
                             class="rounded-circle shadow-lg"
                             alt="<%= about[i].title %>"
                        />
                    </span>
                        </div>
                        <div class="col-md-6 pt-3">
                    <span class="h6">
                        Follow Me On:
                        <a href="mailto:<%= about[i].email %>"><i class="far fa-envelope"></i></a>
                        <a href="tel:<%= about[i].phone %>"><i class="fas fa-mobile-alt"></i></a>
                    </span>
                        </div>
                    </div>
                    <q>
                        <%= about[i].about %>
                    </q>
                    <br>
                    <% if(loggedIn) { %>
                        <a href="/delete/about/<%= about[i]._id %>" class="btn w-25 btn-warning rounded-pill">delete the bio</a>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
<% } %>