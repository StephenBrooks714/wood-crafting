<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header') -%>
<body class="account-bg">
<%- include('layouts/navBar') -%>
<main class="container">
    <div class="row justify-content-center align-items-center flex-center d-flex mx-auto" style="height: 100vh;">
        <div class="col-lg-10 col-md-10 col-sm-12">
            <div class="text-center px-md-5 mx-md-5 p-2 card rgba-black-light">
                <h1 class="text-white-50">Register for Access</h1>
                <% if(errors != null && errors.length > 0) {%>
                    <ul class="list-group">
                        <% for(var i = 0; i < errors.length; i++){ %>
                            <li class="list-group-item list-group-item-danger">
                                <%= errors[i] %>
                            </li>
                        <% } %>
                    </ul>
                <% } %>
                <form action="/store/user" method="post" enctype="multipart/form-data">
                    <label for="username" class="form-label text-white">Username</label>
                    <input type="text" name="username" id="username" class="mb-3 form-control" />
                    <label for="email" class="form-label text-white">Email</label>
                    <input type="email" name="email" id="email" class="mb-3 form-control" />
                    <label for="password" class="form-label text-white">Password</label>
                    <input type="password" name="password" id="password" class="mb-3 form-control" />
                    <p class="mb-3 text-white">Don't have an account?
                        <a href="/register" class="text-white font-weight-bold">Register here</a>.</p>
                    <button class="btn btn-brown rounded-pill" type="submit">register for account</button>
                </form>
            </div>
        </div>
    </div>
</main>
<%- include('layouts/footer') -%>
</body>
<%- include('layouts/scripts') -%>
</html>